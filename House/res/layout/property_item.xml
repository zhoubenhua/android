<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >
	<RelativeLayout
	    android:layout_margin="@dimen/dimen_10_dip"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    >
	    <com.yifang.house.widget.DownloadImageView 
	        android:layout_height="@dimen/dimen_75_dip"
	        android:scaleType="centerCrop"
	        android:id="@+id/property_pic_iv"
	        android:src="@drawable/pic"
	    	android:layout_width="@dimen/dimen_100_dip" 
	        />
	    <LinearLayout
	        android:layout_marginLeft="@dimen/dimen_10_dip"
	        android:layout_toRightOf="@+id/property_pic_iv"
	        android:layout_height="@dimen/dimen_75_dip"
	    	android:layout_width="fill_parent"
	        android:orientation="vertical"
	        >
	        <RelativeLayout 
	            style="@style/fill_wrap"
	            >
	            <ImageView
	                style="@style/wrap_wrap"	
	                android:id="@+id/property_statu_iv"
	                android:layout_alignParentRight="true"
	                 />
	            <TextView
	                style="@style/fill_wrap"
	                android:gravity="left"	
	                android:id="@+id/property_name_tv"
	                android:singleLine="true"
	                android:ellipsize="end"
	                android:layout_toLeftOf="@+id/property_statu_iv"
	                 />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:layout_marginTop="@dimen/dimen_1_dip"
	            style="@style/fill_wrap"
	            >
	            <TextView
	                style="@style/wrap_wrap"	
	                android:id="@+id/price_name_tv"  
	                android:singleLine="true"
	                android:ellipsize="end"
	                android:textSize="13sp"
	                android:textColor="@color/red"
	                android:layout_alignParentRight="true"
	                 />
	            <TextView
	                style="@style/fill_wrap"
	                android:gravity="left"	
	                android:textSize="13sp"
	                android:id="@+id/area_name_tv"  
	                android:singleLine="true"
	                android:ellipsize="end"
	                android:layout_toLeftOf="@+id/price_name_tv"
	                 />
	        </RelativeLayout>
	        <TextView
	            android:layout_marginTop="@dimen/dimen_1_dip"
	            style="@style/fill_wrap"	
	            android:textSize="13sp"
	            android:singleLine="true"
	            android:ellipsize="end"    
	            android:id="@+id/address_name_tv"     
	             />
	        <TextView
	             android:layout_marginTop="@dimen/dimen_1_dip"
	             android:singleLine="true"
	             android:ellipsize="end"
	             android:textSize="13sp"
	             style="@style/wrap_wrap"	
	             android:textColor="@color/ayellow"   
	             android:id="@+id/discount_name_tv"     
	             />
	    </LinearLayout>
	</RelativeLayout>
	<View 
	    android:layout_height="0dip"
	    android:layout_width="fill_parent"
	    />
</LinearLayout>
