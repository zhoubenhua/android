<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f9f9f9"
    android:orientation="vertical" >
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:paddingLeft="@dimen/dimen_10_dip"
	    android:paddingRight="@dimen/dimen_10_dip"
	    android:layout_height="@dimen/dimen_45_dip"
	    >
	    <TextView 
	        android:id="@+id/new_house_title_tv"
	        style="@style/wrap_wrap"
	        android:text="新盘"
	        android:layout_centerVertical="true"
	        />
	    <ImageView 
	        android:layout_width="@dimen/dimen_16_dip"
	        android:layout_height="@dimen/dimen_20_dip"
	        android:src="@drawable/map"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:id="@+id/map_iv"
	        />
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/map_iv"
	        android:layout_marginRight="@dimen/dimen_10_dip"
	        android:layout_marginLeft="@dimen/dimen_10_dip"
	        android:layout_toRightOf="@+id/new_house_title_tv"
	        android:layout_height="@dimen/dimen_25_dip"
	        android:background="@drawable/white_boarder"
	        >
	        <ImageView 
		        android:layout_width="@dimen/dimen_18_dip"
		        android:layout_height="@dimen/dimen_15_dip"
		        android:src="@drawable/search"
		        android:layout_marginRight="@dimen/dimen_10_dip"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:id="@+id/search_iv"
		        />
	        <EditText
	            android:background="@null"
	            android:id="@+id/key_et"
	            android:layout_toLeftOf="@+id/search_iv"
	            style="@style/fill_fill"	
	            />
	    </RelativeLayout>
	</RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_33_dip"
        android:background="@drawable/dh_btn"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip" >

        <RelativeLayout
            android:id="@+id/area_rl"
            android:layout_width="@dimen/dimen_85_dip"
            android:layout_height="@dimen/dimen_33_dip" >

            <TextView
                android:id="@+id/area_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:singleLine="true"		
                android:text="区域"
                android:textColor="#333333"
                android:textSize="14sp" />
			<RelativeLayout
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_alignParentRight="true"
			    >
			    <ImageView
	                android:layout_width="@dimen/dimen_14_dip"
	                android:layout_height="@dimen/dimen_10_dip"
	                android:layout_centerVertical="true"
	                android:id="@+id/area_arrow_iv"
	                android:src="@drawable/tiipdown" />
			    <ImageView
			        android:layout_toRightOf="@+id/area_arrow_iv"
			        android:layout_marginLeft="@dimen/dimen_5_dip"
	                android:layout_width="@dimen/dimen_1_dip"
	                android:layout_height="fill_parent"
	                android:src="@drawable/line" />
			</RelativeLayout>  
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/type_rl"
            android:layout_width="@dimen/dimen_85_dip"
            android:layout_height="@dimen/dimen_33_dip" >

           <TextView
                android:id="@+id/type_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="类型"
                android:textColor="#333333"
                android:textSize="14sp" />

			<RelativeLayout
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_alignParentRight="true"
			    >
			    <ImageView
	                android:layout_width="@dimen/dimen_14_dip"
	                android:layout_height="@dimen/dimen_10_dip"
	                android:layout_centerVertical="true"
	                android:id="@+id/type_arrow_iv"
	                android:src="@drawable/tiipdown" />
			    <ImageView
			        android:layout_toRightOf="@+id/type_arrow_iv"
			        android:layout_marginLeft="@dimen/dimen_5_dip"
	                android:layout_width="@dimen/dimen_1_dip"
	                android:layout_height="fill_parent"
	                android:src="@drawable/line" />
			</RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/price_rl"
            android:layout_width="@dimen/dimen_85_dip"
            android:layout_height="@dimen/dimen_33_dip" >

           <TextView
                android:id="@+id/price_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="价格"
                android:textColor="#333333"
                android:textSize="14sp" />
			<RelativeLayout
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_alignParentRight="true"
			    >
			    <ImageView
	                android:layout_width="@dimen/dimen_14_dip"
	                android:layout_height="@dimen/dimen_10_dip"
	                android:layout_centerVertical="true"
	                android:id="@+id/price_arrow_iv"
	                android:src="@drawable/tiipdown" />	
			    <ImageView
			        android:layout_toRightOf="@+id/price_arrow_iv"
			        android:layout_marginLeft="@dimen/dimen_5_dip"
	                android:layout_width="@dimen/dimen_1_dip"
	                android:layout_height="fill_parent"
	                android:src="@drawable/line" />
			</RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_rl"
            android:layout_width="@dimen/dimen_65_dip"
            android:layout_height="@dimen/dimen_33_dip" >

            <TextView
                android:id="@+id/more_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="更多"
                android:textColor="#333333"
                android:textSize="14sp" />

			<RelativeLayout
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_alignParentRight="true"
			    >
			    <ImageView
	                android:layout_width="@dimen/dimen_14_dip"
	                android:layout_height="@dimen/dimen_10_dip"
	                android:layout_centerVertical="true"
	                android:id="@+id/more_arrow_iv"
	                android:src="@drawable/tiipdown" />
			</RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout style="@style/fill_fill" >

        <com.yifang.house.widget.pullrefresh.PullToRefreshListView
            android:id="@+id/property_list_lv"
            xmlns:ptr="http://schemas.android.com/apk/res-auto"		
			android:layout_width="fill_parent"						
	        android:layout_height="fill_parent"
	        android:cacheColorHint="#00000000"				
	        android:listSelector="#00000000"
	        android:scrollbars="none"				
	        ptr:ptrMode="both"/>
        <!-- </com.uulife.widget.PullToRefreshView> -->

        <TextView
            android:id="@+id/no_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:text="没有相关记录~"
            android:textColor="#A09E99"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>