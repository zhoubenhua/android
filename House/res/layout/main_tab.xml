<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
   android:background="#ffffff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" 
            />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        >
	        <Button
	            android:textColor="#ffffff"
	            android:textSize="14sp"
	            android:id="@+id/home_bt"
	            android:background="@drawable/syicon"
	            android:layout_width="@dimen/dimen_64_dip"
	            android:layout_height="@dimen/dimen_50_dip"
	            />
	        <Button
	            android:textColor="#ffffff"
	            android:textSize="14sp"
	            android:id="@+id/find_house_bt"
	            android:background="@drawable/sficon"
	            android:layout_width="@dimen/dimen_64_dip"
	            android:layout_height="@dimen/dimen_50_dip"
	            />
	        <Button
	            android:textColor="#ffffff"
	            android:textSize="14sp"
	            android:id="@+id/tools_bt"
	            android:background="@drawable/gjicon"
	            android:layout_width="@dimen/dimen_64_dip"
	            android:layout_height="@dimen/dimen_50_dip"
	            />
	        <Button
	            android:textColor="#ffffff"
	            android:textSize="14sp"
	            android:id="@+id/mine_bt"
	            android:background="@drawable/yficon"
	            android:layout_width="@dimen/dimen_64_dip"
	            android:layout_height="@dimen/dimen_50_dip"
	            />
	    </LinearLayout>
    </LinearLayout>

</TabHost>