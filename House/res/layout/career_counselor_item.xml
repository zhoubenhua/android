<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >
	<LinearLayout
	    android:layout_height="fill_parent"
	    android:layout_width="wrap_content"
	    android:layout_margin="@dimen/dimen_10_dip"
	    >
	    <RelativeLayout
	        style="@style/fill_wrap"	       
	         >
	         <com.yifang.house.widget.DownloadImageView
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:id="@+id/head_iv"
                 android:scaleType="centerCrop"
                 />
	        <RelativeLayout 
	            android:layout_toRightOf="@+id/head_iv"
	            android:layout_width="fill_parent"
	            android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_height="@dimen/dimen_60_dip"
	            >
	            <RelativeLayout
	                style="@style/fill_wrap"
	                android:id="@+id/author_name_rl"
	                 >
	                 <TextView
	                    android:text="李奇山"
	                    style="@style/wrap_wrap"	
	                    android:textSize="15sp"
	                    android:layout_centerVertical="true"
	                    android:id="@+id/carrer_name_tv"
	                    />
	                 <LinearLayout 
	                     style="@style/wrap_wrap"
	                     android:layout_alignParentRight="true"
	                     >
	                     <ImageView 
	                         android:layout_width="@dimen/dimen_27_dip"
	                         android:layout_height="@dimen/dimen_26_dip"
	                         android:id="@+id/phone_iv"
	                         android:scaleType="centerCrop"
	                         android:src="@drawable/phone"
	                         />
	                     <ImageView 
	                         android:layout_width="@dimen/dimen_27_dip"
	                         android:layout_height="@dimen/dimen_26_dip"
	                         android:id="@+id/wx_iv"
	                         android:scaleType="centerCrop"
	                         android:src="@drawable/wx"
	                         />
	                 </LinearLayout>
	            </RelativeLayout>
	            <TextView 
	                style="@style/wrap_wrap"
	                android:id="@+id/bbs_subject_tv"
	                android:textSize="14sp"
	                android:layout_below="@+id/author_name_rl"
	                android:layout_marginTop="@dimen/dimen_10_dip"
	                android:text="房源信息"
	                />
	        </RelativeLayout>

	    </RelativeLayout>
	</LinearLayout>
	<View 
	    android:layout_height="0dip"
	    android:layout_width="fill_parent"
	    />
</LinearLayout>
