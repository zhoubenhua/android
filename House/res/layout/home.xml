<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView style="@style/fill_wrap" >

        <LinearLayout
            style="@style/fill_wrap"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_35_dip"
                android:scaleType="centerCrop"
                android:src="@drawable/guanggao" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_105_dip" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/ad_vp"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_105_dip" />

                <com.yifang.house.widget.IconPageIndicator
                    android:id="@+id/circle_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_5_dip" />
            </RelativeLayout>

            <LinearLayout
                style="@style/fill_wrap"
                android:paddingTop="@dimen/dimen_4_dip" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_158_dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/new_house_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_158_dip"
                        android:src="@drawable/new_house_selector" />

                    <ImageView
                        android:id="@+id/discount_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_77_dip"
                        android:layout_marginTop="@dimen/dimen_4_dip"
                        android:src="@drawable/discount_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_158_dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4_dip"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/house_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_77_dip"
                        android:src="@drawable/house_selector" />

                    <ImageView
                        android:id="@+id/activity_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_158_dip"
                        android:layout_marginTop="@dimen/dimen_4_dip"
                        android:src="@drawable/activity_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/fill_wrap"
                android:paddingTop="@dimen/dimen_4_dip" >

                <ImageView
                    android:id="@+id/old_house_iv"
                    android:layout_width="@dimen/dimen_158_dip"
                    android:layout_height="@dimen/dimen_158_dip"
                    android:src="@drawable/old_house_selector" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_158_dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4_dip"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/find_house_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_77_dip"
                        android:src="@drawable/find_house_selector" />

                    <ImageView
                        android:id="@+id/house_news_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_77_dip"
                        android:layout_marginTop="@dimen/dimen_4_dip"
                        android:src="@drawable/house_news_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/fill_wrap"
                android:paddingTop="@dimen/dimen_4_dip" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_158_dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/map_house_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_77_dip"
                        android:src="@drawable/map_house_selector" />

                    <ImageView
                        android:id="@+id/count_iv"
                        android:layout_width="@dimen/dimen_158_dip"
                        android:layout_height="@dimen/dimen_77_dip"
                        android:layout_marginTop="@dimen/dimen_4_dip"
                        android:src="@drawable/count_selector" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/chat_iv"
                    android:layout_width="@dimen/dimen_158_dip"
                    android:layout_height="@dimen/dimen_158_dip"
                    android:layout_marginLeft="@dimen/dimen_4_dip"
                    android:src="@drawable/chat_selector" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>